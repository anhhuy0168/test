<div class="mt-4" style="width: 50%; margin-left:100px;">
        <h3>sửa khóa học</h3>
        <form method="POST" action="/courses/{{course._id}}?_method=PUT">  <!-- du lieu se den duong dan /courses/store o controller -->
            <div class="form-group">
                <label for="name">Tên khóa học</label>
                <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">              
            </div>
             <div class="form-group">
                <label for="decription">Mô tả khóa học</label>
                <input type="text" class="form-control" value="{{course.decription}}" id="decription" name="decription">              
            </div>
             <div class="form-group">
                <label for="videoID">ID video</label>
                <input type="text" class="form-control" value="{{course.videoID}}" id="videoID" name="videoID">              
            </div>
            <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
</div>